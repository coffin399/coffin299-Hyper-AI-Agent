{
  "name": "hyper-ai-agent",
  "version": "0.1.0",
  "description": "BYOK multi-provider AI agent with RAG and automation",
  "main": "electron.js",
  "author": {
    "name": "Hyper AI Agent",
    "email": "contact@example.com"
  },
  "scripts": {
    "dev": "electron .",
    "dev:frontend": "npm --prefix frontend start",
    "build:frontend": "npm --prefix frontend install && npm --prefix frontend run build",
    "build": "npm run build:frontend && electron-builder",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "pack": "npm run build:frontend && electron-builder --dir"
  },
  "build": {
    "appId": "com.coffin299.hyper-ai-agent",
    "productName": "Hyper AI Agent",
    "icon": "src/icons/icon.png",
    "files": [
      "electron.js",
      "preload.js",
      "src/icons/**/*",
      "frontend/build/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/backend",
        "to": "backend"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {}
}
